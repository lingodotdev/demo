{
  "version": 1.2,
  "locale": {
    "source": "en",
    "targets": [
      "fr",
      "es",
      "ar",
      "hi"
    ]
  },
  "buckets": {
    "json": {
      "include": [
        "public/i18n/[locale].json"
      ]
    },
    "markdown": {
      "include": [
        "public/content/one/[locale].md",
        "public/content/two/[locale].md",
        "public/content/three/[locale].md"
      ]
    }
  }
}
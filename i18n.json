{
  "version": 1.2,
  "locale": {
    "source": "en",
    "targets": [
      "fr",
      "de",
      "ru",
      "zh",
      "ar",
      "hi",
      "ja",
      "tr"
    ]
  },
  "buckets": {
    "json": {
      "include": [
        "public/i18n/[locale].json"
      ]
    },
    "markdown": {
      "include": [
        "public/content/[locale]/*.md"
      ]
    }
  }
}